{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "db",
    "namespace": "template",
    "labels": {
      "name": "db"
    }
  },
  "spec": {
    "replicas": 0,
    "template": {
      "metadata": {
        "labels": {
          "name": "db"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "db",
            "image": "stevesloka/k8s-mysql",
            "ports": [
              {
                "name": "mysql-server",
                "containerPort": 3306
              }
            ]
          }
        ]
      }
    }
  }
}
